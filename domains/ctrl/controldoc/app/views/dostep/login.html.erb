
<% @tytul_strony = "Logowanie" %>

<div class="item1">
	<div class="content1">
	<%= form_tag(:action => 'logowanie') do %>
	<table>
		<tr>
			<td><%= label_tag(:uzytkownik, "Użytkownik: ") %></td>
			<td><%= text_field_tag(:uzytkownik) %></td>
		</tr>
		<tr>
			<td><%= label_tag(:haslo, "hasło: ") %></td>
			<td><%= password_field_tag(:haslo) %></td>
		</tr>
		<tr>
			<td>&nbsp</td>
			<td><%= submit_tag("Zaloguj") %></td>
		</tr>
	</table>
	<% end %>
</div>
</div>



